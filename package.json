{
    "name": "cloudfire",
    "main": "./dist/worker.js",
    "version": "0.0.0",
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^23.3.11",
        "jest": "^23.6.0",
        "prettier": "^1.15.3",
        "ts-jest": "^23.10.5",
        "tslint": "^5.12.0",
        "tslint-config-prettier": "^1.17.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.2.2"
    },
    "scripts": {
        "start": "workers-preview < ./dist/main.js",
        "prepare": "tsc",
        "test": "jest",
        "lint": "tslint ./src/**/*.ts",
        "deploy": "serverless deploy",
        "predeploy": "yarn run prepare"
    },
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
